@{
    ViewData["title"] = "Resumo";

    var pedido = Model;
    var cadastro = pedido.Cadastro;
}
@model Pedido;


<h3>Resumo do Pedido</h3>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Nº do Pedido: @pedido.Id</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h3>Seus Dados</h3>
                <div>@cadastro.Nome</div>
                <div>@cadastro.Telefone</div>
            </div>
            <div class="col-md-3">
                @cadastro.Email
            </div>
            <div class="col-md-6">
                <h3>Endereço de Entrega</h3>
                <div>@cadastro.Endereco (@cadastro.Complemento) - @cadastro.Bairro - CEP: @cadastro.CEP - @cadastro.Municipio - @cadastro.UF - Brasil </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <h3>Item</h3>
            </div>
            <div class="col-md-2">
                <h3>Quantidade</h3>
            </div>
        </div>
        <div class="row">
            @{
                foreach (var item in pedido.Itens)
                {
                    <div class="col-md-10">
                        <div>@item.Produto.Nome</div>
                    </div>
                    <div class="col-md-2">
                        <div class="pull-right">@item.Quantidade</div>
                    </div>
                }
            }
        </div>
    </div>
</div>
